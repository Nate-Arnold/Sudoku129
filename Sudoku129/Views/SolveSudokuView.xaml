                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0">Title:</Label>
                    <TextBlock x:Name = "NameTextBlock" Text="{Binding Name}" TextAlignment="Center" Margin = "5" Width = "120" Height = "30"
                               Grid.Row="0" Grid.Column="1" TextWrapping="Wrap"/>

                    <Label Grid.Row="1">Author:</Label>
                    <TextBlock x:Name = "AuthorTextBlock" Text="{Binding Author}" TextAlignment="Center" Margin = "5" Width = "120" Height = "30"
                               Grid.Row="1" Grid.Column="1" TextWrapping="Wrap"/>

                    <Label Grid.Row="2">Description:</Label>
                    <TextBlock x:Name = "DescriptionTextBlock" Text="{Binding Description}" TextAlignment="Center" Margin = "5" Width = "120" Height = "30" HorizontalAlignment="Stretch"
                               Grid.Row="2" Grid.Column="1" TextWrapping="Wrap"/>

